{
  "name": "allure-moda",
  "private": true,
  "scripts": {
    "dev:backend": "dotnet run --project Backend/AllureModa.API.csproj",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "dotnet build Backend/AllureModa.API.csproj -c Release",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}